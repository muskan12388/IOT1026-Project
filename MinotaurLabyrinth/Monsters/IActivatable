namespace MinotaurLabyrinth
{
    /// <summary>
    /// Represents an interface for activating game elements.
    /// </summary>
    public interface IActivatable
    {
        /// <summary>
        /// Activates the game element.
        /// </summary>
        /// <param name="hero">The hero interacting with the game element.</param>
        /// <param name="map">The current game map.</param>
        void Activate(Hero hero, Map map);
    }
}
